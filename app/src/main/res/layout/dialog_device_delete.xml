<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iotaii.card_tracker.DialogDeviceDeleteActivity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="389dp"
        android:layout_height="146dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="sans-serif-black"
        android:text="Are you sure?"
        android:textAlignment="center"
        android:textColor="#18053A"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yes_device"
        android:layout_width="142dp"
        android:layout_height="100dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="@color/black"
        android:text="Yes"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/no_device"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:rippleColor="#240A0A" />

    <Button
        android:id="@+id/no_device"
        android:layout_width="142dp"
        android:layout_height="100dp"
        android:layout_marginTop="84dp"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="@color/black"
        android:text="No"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />
</androidx.constraintlayout.widget.ConstraintLayout>