<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iotaii.card_tracker.DialogUserDeleteActivityActivity">

  <TextView
      android:id="@+id/textView17"
      android:layout_width="201dp"
      android:layout_height="65dp"
      android:layout_marginStart="105dp"
      android:layout_marginTop="181dp"
      android:layout_marginEnd="105dp"
      android:fontFamily="sans-serif-black"
      android:text="Are you sure?"
      android:textAlignment="center"
      android:textColor="#18053A"
      android:textSize="25sp"
      android:textStyle="bold"
      android:typeface="serif"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/yes_user"
      android:layout_width="148dp"
      android:layout_height="98dp"
      android:layout_marginStart="36dp"
      android:layout_marginTop="96dp"
      android:layout_marginEnd="60dp"
      android:fontFamily="sans-serif-black"
      android:backgroundTint="@color/black"
      android:text="Yes"
      android:textSize="25sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.47"
      app:layout_constraintStart_toEndOf="@+id/no_user"
      app:layout_constraintTop_toBottomOf="@+id/textView17"
      app:rippleColor="#240A0A" />

  <Button
      android:id="@+id/no_user"
      android:layout_width="144dp"
      android:layout_height="98dp"
      android:layout_marginTop="96dp"
      android:fontFamily="sans-serif-black"
      android:backgroundTint="@color/black"
      android:text="No"
      android:textSize="25sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.149"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView17" />
</androidx.constraintlayout.widget.ConstraintLayout>