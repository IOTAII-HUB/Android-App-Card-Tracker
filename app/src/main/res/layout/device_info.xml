            app:layout_constraintTop_toBottomOf="@+id/user_name_device_display" />

        <TextView
            android:id="@+id/mobile_device_display"
            android:layout_width="189dp"
            android:layout_height="33dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="14dp"
            android:paddingStart="1dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/email_id_device_display" />

        <TextView
            android:id="@+id/date_of_purchase_device_display"
            android:layout_width="189dp"
